<p id="notice"><%= notice %></p>

<ul>
<% @cart.cart_items.each do |item| %>
	<li>
		<%=item.product.name%> x
		<%= item.quantity %></br>
		<%= number_to_currency(item.product.price*item.quantity) %>
	</li>
<% end %>
</ul>
<%= button_to "Checkout!", new_order_path, method: :get, class: "custom_button" %>
<%= button_to "Empty Cart", @cart, method: :delete, confirm: 'Are you sure?', class: "custom_button" %>
<%= link_to 'Back', products_path %>
